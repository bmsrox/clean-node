{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "NodeJS Rest API using TDD, Clean Architeture and Typescript",
  "author": "Bruno Marinho <bmsrox@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.31",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "2",
    "eslint": "6",
    "eslint-config-standard-with-typescript": "^15.0.1",
    "eslint-plugin-import": "2",
    "eslint-plugin-node": "11",
    "eslint-plugin-promise": "4",
    "eslint-plugin-standard": "4",
    "git-commit-msg-linter": "^2.4.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.9",
    "rimraf": "^3.0.2",
    "sucrase": "^3.13.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "start": "node dist/application/server.js",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "dev": "sucrase-node src/application/server.ts",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:vebose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test -- --watch -c jest-unit-config.js",
    "test:integration": "yarn test -- --watch -c jest-integration-config.js",
    "test:staged": "yarn test -- --findRelatedTests",
    "test:ci": "yarn test -- --coverage"
  },
  "engines": {
    "node": "12.x"
  },
  "dependencies": {
    "@types/express": "^4.17.3",
    "express": "^4.17.1",
    "module-alias": "^2.2.2"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
